/*筛选项隐藏 显示动画 start*/
 
@keyframes slidown {
 
  from {
 
    /* opacity: 0.1 */
 
    transform: translateY(0%);
 
  }
 

 
  to {
 
    /* opacity: 1 */
 
    transform: translateY(90%);
 
  }
 
}
 

 
.slidown {
 
  display: block;
 
  z-index: 3;
 
  animation: slidown 0.1s ease-in both;
 
  background-color: white;
 
  top: -500rpx;
 
}
 

 
@keyframes slidup {
 
  from {
 
    transform: translateY(100%);
 
  }
 

 
  to {
 
    transform: translateY(0%);
 
  }
 
}
 

 
.slidup {
 
  display: block;
 
  animation: slidup 0.4s ease-in both;
 
  z-index: -100;
 
  
 
  top: -516rpx;
 
  background-color: white;
 
}
 

 

 

 
