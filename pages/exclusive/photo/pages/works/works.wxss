/* pages/works/works.wxss */
/* 背景颜色 */
page {
  background-color: rgba(63, 81, 181, 1);
}
/* 整体页面布局 */
.info {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin: 24rpx;
  border-radius: 8rpx;
  color: rgba(16, 16, 16, 1);
  background-color: white;
  font-family: Arial;
}

#title {
  color: rgba(3, 45, 60, 1);
  font-size: 36rpx;
  margin: 24rpx;
  text-align: center;
  font-family: PingFangSC-regular;
}

#img {
  /* width: 315px; */
  height: 476px; 
  width: 94%;
  border-radius: 16rpx;
  box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0.24);
}

.btn1 {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 630rpx;
  height: 94rpx;
  border-radius: 30px;
  background-color: rgba(63, 81, 181, 0.8);
  color: rgba(255, 255, 255, 1);
  font-size: 16px;
  font-family: Microsoft Yahei;
  margin: 24rpx;
}

.btn1::after {
  border-radius: 98rpx;
  border: 0;
}

/* font_detal */

.p {
  display: flex;
  -webkit-justify-content: center;
  justify-content: center;
}

p#left {
  margin: 10px;
  width: 96rpx;
  height: 44rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

p#right {
  margin: 10px;
  width: 400rpx;
  height: 44rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

/* 作品集 */

.works {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 95%;
  border-radius: 8rpx;
}

#workstitle {
  align-self: baseline;
  width: 120px;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  margin-left: 48rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.works image {
  /* width: 630rpx; */
  height: 634rpx;
  width: 94%;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}
