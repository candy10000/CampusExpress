/* pages/orderConfirm/orderConfirm.wxss */

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 1506rpx;
  background-color: rgba(63, 81, 181, 1);
}
/* top */
.wrapper view#top {
  width: 100%;
  height: 500rpx;
  padding: 30rpx 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
 
}

.img_warning{
  font-size: 240rpx;
  width: 100%;
  text-align: center;
  color: #fff;
}

.wrapper view#top view#top-warn-msg {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 40rpx;
  margin-top: 25rpx;
}

.wrapper view#top view#top-total-msg {
    width: 100%;
  display: block;
  text-align: center;
  font-size: 32rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}
/* middle */
.wrapper view#middle{
  width: 85%;
  height: auto;
  border-top: 2px dashed rgba(255, 255, 255, 1);
  border-bottom: 2px dashed rgba(255, 255, 255, 1);
  color: rgba(255, 255, 255, 1);
font-size: 28rpx;
font-family: PingFangSC-regular;
text-align:center;
margin: 20rpx auto;
padding: 30rpx 0;
}

.wrapper view#middle view{
  margin: 10rpx auto;
}

/* bottom按钮样式 */
.wrapper view#bottom{

    margin-top: 28rpx; 
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.button{

  height: 66rpx;
  width: 170rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
  background-color: #fff;
  color: #3F51B5;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center; 
}
.button1{
  height: 66rpx;
  width: 224rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
  background-color: #fff;
    font-size: 28rpx;
  color: #3F51B5;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;  
}

