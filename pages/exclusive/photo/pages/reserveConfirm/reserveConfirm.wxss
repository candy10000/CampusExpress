/* pages/reserveConfirm/reserveConfirm.wxss */

page {
  background-color: rgba(63, 81, 181, 1);
}

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
}

.top {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 85%;
  padding-top: 36rpx;
  padding-bottom: 30rpx;
}

.img_warning {
  font-size: 240rpx;
  width: 100%;
  text-align: center;
  color: #fff;
}

.top .top-warn-msg {
  color: rgba(255, 255, 255, 1);
  font-size: 40rpx;
  font-family: PingFangSC-regular;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

.top .top-total-msg {
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
  /* text-align: center; */
  font-family: PingFangSC-regular;
  margin-bottom: 24rpx;
}

.middle {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 85%;
  border-top: 2px dashed rgba(255, 255, 255, 1);
  border-bottom: 2px dashed rgba(255, 255, 255, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.middle view {
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  margin: auto;
}

.middle .inline{
  display: flex;
  direction: row;
  justify-content:center;
  line-height: 100%;
}
.middle .inline .line_text{
  line-height: 100%;
}
/* update样式 */

.ups {
  display: inline-block;
  height: 12%;
  border: 1px solid #c1c1c1;
  color: #fff;
  text-align: center;
}

/* 按钮样式 */

.bottom {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 85%;
  padding-top: 36rpx;
}

.order-btn {
  width: 170rpx;
  height: 66rpx;
}

.btn-pay {
  margin-top: 22rpx;
  border-radius: 8rpx;
  color: #3f51b5;
  background-color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  display: flex;
