/* component/RecordPlayer/RecordPlayer.wxss */
.voiceArea{
  color: #3f51b5;
  min-width: 100rpx;
  margin-left: 24rpx ;
  margin-top: 24rpx ;
  padding: 14rpx 34rpx;
  box-shadow: 0rpx 4rpx 15rpx 0rpx rgba(0, 0, 0, 0.24);
  border-radius: 50rpx;
  display: inline-block;
  position: relative;
  overflow: hidden;
}
.voice_content{
  display: inline-block;
  margin-left: 40rpx ;
  margin-right: 40rpx ;
}
.loading {
  width: 100%;
  height: 100%;
  opacity: 0.3;
  background-color: #3f51b5;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 50rpx;
}